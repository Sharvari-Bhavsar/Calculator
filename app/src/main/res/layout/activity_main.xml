<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity"
    android:background="@color/darkblue"
    >

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="2sp"
        android:layout_weight="1"
        android:background="@color/lightpink"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"

        android:textAlignment="viewEnd"
        android:textColor="@color/darkblue"
        android:textSize="30sp"
        tools:ignore="HardcodedText,RtlCompat"
       />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_marginBottom="2sp"
        android:layout_weight="1"
        android:background="@drawable/gradient2"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"

        android:textAlignment="viewEnd"
        android:textColor="@color/darkblue"
        android:textSize="40sp"
        tools:ignore="HardcodedText,RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:background="@color/lightpink"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            tools:ignore="NestedWeights,UselessParent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"

                    android:weightSum="4">


                    <Button
                        android:id="@+id/btnAC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="AC"
                        android:textColor="@color/lightpink"
                        android:textSize="23sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        tools:ignore="HardcodedText,TextSizeCheck"
                        style="?android:attr/buttonBarButtonStyle"></Button>

                    <Button
                        android:id="@+id/btnC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:text="C"
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnBrac1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:text="("
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnBrac2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:text=")"
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btnSin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="sin"
                        android:textColor="@color/lightpink"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnCos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="cos"
                        android:textColor="@color/lightpink"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnTan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="tan"
                        android:textColor="@color/lightpink"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnLog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="log"
                        android:textColor="@color/lightpink"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnLn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ln"
                        android:textColor="@color/lightpink"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btnFact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x!"
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnSqr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x² "
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnSqrt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="√"
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnInverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1/x"
                        android:textColor="@color/lightpink"
                        android:textSize="23sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnDivide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=" ÷"
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnMultiply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="   *"
                        android:textColor="@color/lightpink"
                        android:textSize="33sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="   -"
                        android:textColor="@color/lightpink"
                        android:textSize="33sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="   +"
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkblue"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btnpi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="π"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnpoint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="."
                        android:textColor="@color/white"
                        android:textSize="33sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>

                    <Button
                        android:id="@+id/btnequal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="   ="
                        android:textColor="@color/lightpink"
                        android:textSize="30sp"
                        app:backgroundTint="@color/darkblue"
                        app:cornerRadius="1dp"
                        style="?android:attr/buttonBarButtonStyle"
                        tools:ignore="HardcodedText"></Button>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>